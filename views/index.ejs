<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <header>
      <h1>All recipes</h1>
    </header>

    <main>
      <% if (recipes.length > 0) { %>
      <div class="recipes-grid">
        <% recipes.forEach(recipe => { %>
        <a href="/recipes/<%= recipe._id %>" class="recipe-card">
          <section class="img-container">
            <img src="<%= recipe.picturePath %>" alt="" />
          </section>
          <section class="recipe-card-info">
            <h3 class="title"><%= recipe.title %></h3>
            <p class="snippet"><%= recipe.snippet %></p>
          </section>
        </a>
        <% }) %>
      </div>
      <% } else { %>
      <div id="main-page-container">
        <p class="no-recipes">There are no recipes to display</p>
      </div>
      <% } %>
    </main>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
